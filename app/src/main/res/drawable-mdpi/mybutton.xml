<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a4c62229" />
            <gradient android:angle="-90" android:startColor="#eb282d" android:endColor="#bc1a21"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#795752" />
            <solid android:color="#854a40"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a4c62229" />
            <gradient android:angle="-90" android:startColor="#bc1a21" android:endColor="#eb282d" />
        </shape>
    </item>
</selector>