<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#795551" />
            <gradient android:angle="-90" android:startColor="#590307" android:endColor="#9a3028"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#795752" />
            <solid android:color="#854a40"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#795c57" />
            <gradient android:angle="-90" android:startColor="#efefef" android:endColor="#8c8c8c" />
        </shape>
    </item>
</selector>