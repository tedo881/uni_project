<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/SView"

        android:layout_marginBottom="25dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mylin">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="20dp"
                android:layout_weight="4"
                android:id="@+id/name"
                android:background="@drawable/custom_btn_orange"
                android:gravity="center"
                android:textColor="#ffffff" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:background="@drawable/user"/>

        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="სპეციალობა"
                    android:layout_weight="4"
                    android:id="@+id/textView3"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/faculty"

                    android:background="@drawable/custom_btn_orange"
                    android:gravity="center"
                    android:textColor="#ffffff" />



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="სემესტრი"
                    android:layout_weight="4"
                    android:id="@+id/textView5"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/semester"

                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="სტატუსი"
                    android:layout_weight="4"
                    android:id="@+id/textView6"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/status"
                    android:background="@drawable/custom_btn_orange"
                    android:gravity="center"
                    android:textColor="#ffffff" />
            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="სქესი"
                    android:layout_weight="4"
                    android:id="@+id/textView4"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/sqesi"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="დაბ. თარიღი"
                    android:layout_weight="4"
                    android:id="@+id/textView8"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/birth"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="საცხ. ადგილი"
                    android:layout_weight="4"
                    android:id="@+id/textView10"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/address"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ტელ. ნომერი"
                    android:layout_weight="4"
                    android:id="@+id/textView12"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/phone"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ელექტ. მისამართი"
                    android:layout_weight="4"
                    android:id="@+id/textView14"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/email"
                    android:gravity="center"
                    android:background="@drawable/custom_btn_orange"
                    android:textColor="#ffffff" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
